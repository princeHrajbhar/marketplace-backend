# ─── Server ─────────────────────────────────────────────────────────────
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ─── MongoDB ─────────────────────────────────────────────────────────────
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/marketplace_v2

# ─── JWT Access Token (short-lived) ──────────────────────────────────────
JWT_SECRET=your_super_secure_access_token_secret_min_32_characters
JWT_EXPIRES_IN=15m

# ─── JWT Refresh Token (long-lived) ──────────────────────────────────────
JWT_REFRESH_SECRET=your_super_secure_refresh_token_secret_min_32_characters
JWT_REFRESH_EXPIRES_IN=7d

# ─── RabbitMQ ────────────────────────────────────────────────────────────
RABBITMQ_URL=amqp://username:password@localhost:5672

# ─── Nodemailer (Gmail or SMTP) ──────────────────────────────────────────
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=your_email@example.com

# ─── Google OAuth ────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ─── OTP Settings ────────────────────────────────────────────────────────
OTP_EXPIRES_MINUTES=10
OTP_RESEND_COOLDOWN_SECONDS=60
OTP_MAX_ATTEMPTS=5

# ─── Bcrypt ──────────────────────────────────────────────────────────────
BCRYPT_SALT_ROUNDS=12

# ─── Cookie Settings ─────────────────────────────────────────────────────
COOKIE_SECURE=false